<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:TravelRecordApp" 
             x:Class="TravelRecordApp.MainPage">
   
    
    <StackLayout VerticalOptions="Center"
                 Margin="10"> 
        <Image x:Name="iconImage"
               Aspect="AspectFit"
               HorizontalOptions="FillAndExpand"
               HeightRequest="75"
               Margin="0, 0, 0, 10"/>
        <Entry x:Name="emailEntry" Placeholder="Email address"
               TextColor="{StaticResource blueColor}"
               Text="Test"
               Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Password"
               TextColor="{StaticResource blueColor}"
               Text="Test"
               IsPassword="true"/>
        <Button x:Name="LoginButton"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="End"
                Text="Log In"
                Clicked="LoginButton_Clicked"/>
        <Button x:Name="RegisterUserButton"
                Text="Register"
                HorizontalOptions="EndAndExpand"
                VerticalOptions="Start"
                Clicked="RegisterUser_Clicked"/>
    </StackLayout>
</ContentPage>